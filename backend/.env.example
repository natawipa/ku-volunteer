# ===========================================
# KU VOLUNTEER PLATFORM - ENVIRONMENT CONFIG
# ===========================================
# Copy this file to .env and fill in your values
# DO NOT commit the .env file to version control!
# ---------------------------
# Django Settings
# ---------------------------
# Generate with: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=CHANGE_ME_TO_RANDOM_SECRET_KEY

# Set to False in production
DEBUG=True

# ---------------------------
# Database Configuration
# ---------------------------
DB_NAME=ku_volunteer_db
DB_USER=ku_user
DB_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD
DB_HOST=db
DB_PORT=5432

# ---------------------------
# PostgreSQL Initial Setup
# (Should match DB_* variables above)
# ---------------------------
POSTGRES_DB=ku_volunteer_db
POSTGRES_USER=ku_user
POSTGRES_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD

# ---------------------------
# Google OAuth 
# ---------------------------
# Leave empty to disable Google login
# Get credentials from: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URL=http://localhost:8000/api/auth/google/callback/
CLIENT_URL_DEV=http://localhost:3000

# ---------------------------
# Email Configuration
# ---------------------------
# For development - prints emails to console
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# For production - uncomment and configure:
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-gmail-app-password
# DEFAULT_FROM_EMAIL=noreply@ku-volunteer.com

# ---------------------------
# Grafana
# ---------------------------
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=admin
